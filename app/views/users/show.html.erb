<br>
<div class="container">
    <h5>Name: <%= @user.name %><h5>
    <h5>Username: <%= @user.username %></h5>
    <h5>Email: <%= @user.email %></h5>
    <br>
    <%= link_to "Edit My Profile", edit_user_path(@user), class: "btn btn-outline-dark" %>
    <br><br> 
    <%= link_to "Delete My Profile", @user, method: :delete, data:{confirm: "Are you sure you want to delete your profile?"}, class: "btn btn-outline-dark" %>
    <br><br>
    <h5>My Concerts</h5>
    <ul class="list-group">
        <% @user.tickets.each do | ticket | %>
            <li class="list-group-item">
            <p><%= link_to ticket.concert.headliner, concert_ticket_path(ticket.concert, ticket) %><br>
            <%= ticket.concert.opener %><br>
            <%= ticket.concert.date.strftime("%a %b %e, %Y") %><br>
            <%= ticket.concert.time.strftime("%I:%M %p") %><br>
            Tickets: <%= ticket.quantity %></p>
        <% end %>
    </ul>
    <br>
    <%= link_to "Back", concerts_path(@concert), class: "btn btn-outline-dark" %>
</div>